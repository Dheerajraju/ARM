Write an ECP to transmit string "Vector" serially through UART0  of LPC2129 Note:Pclk=15MHZ ,Baud rate=9600

#include<LPC21XX.H>
void UART0_CONFIG(void);
void UART0_TX(unsigned char);
void UART0_STR(unsigned char *);

int main()
{
UART0_CONFIG();
UART0_STR("vector");
}

void UART0_CONFIG(void)
{
PINSEL0 = 0x00000005;
U0LCR = 0x83;
U0DLL = 97;
U0DLM = 0;
U0LCR = 0x03;
}

void UART0_TX(unsigned char dat)
{
while(((U0LSR >> 5)&1)==0);
U0THR = dat;
}

void UART0_STR(unsigned char *s)
{
while(*s)
UART0_TX(*s++);
}

