Write an ECP to receive and re-transmit serially through UART0  of LPC2129 using interrupt method 
	Note:Pclk=15MHZ ,Baud rate=9600

#include <LPC21XX.H>
#define LED 1<<17
#define SW 14

void UART0_CONFIG(void);
void UART0_Interrupt_config(void);

void UART0_ISR(void) __irq
{
	int temp;
	temp = U0IIR;             // Read Interrupt Identification Register
	if(temp == 0x04)          // RDA interrupt (Received Data Available)
	{
		U0THR = U0RBR;        // Read received data and re-transmit it
	}
	VICVectAddr = 0;          // Signal end of interrupt
}

int main()
{
	IODIR0 = LED;              // P0.17 as output
	UART0_CONFIG();
	UART0_Interrupt_config();
	VICIntEnable = 1<<6;       // Enable UART0 interrupt in VIC

	while(1)
	{
		if(((IOPIN0>>SW)&1)==0)
			IOCLR0 = LED;       // LED OFF when switch pressed
		else
			IOSET0 = LED;       // LED ON when switch not pressed
	}
}

void UART0_CONFIG(void)
{
	PINSEL0 = 0x5;      // Enable UART0 pins P0.0 (TXD0), P0.1 (RXD0)
	U0LCR = 0x83;        // 8-bit, 1 stop bit, no parity, DLAB=1
	U0DLL = 97;          // Baud rate = 9600 for Pclk = 15 MHz
	U0DLM = 0;
	U0LCR = 0x03;        // DLAB=0 (lock baud rate)
}

void UART0_Interrupt_config(void)
{
	VICIntSelect = 0;               // All interrupts are IRQ (not FIQ)
	VICVectCntl0 = (0x20) | 6;      // Slot 0, UART0 interrupt (vector 6)
	VICVectAddr0 = (int)UART0_ISR;  // Assign ISR address
	U0IER = (1<<1) | (1<<0);        // Enable RDA & THRE interrupts
}


