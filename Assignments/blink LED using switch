#include<LPC21XX.H>
#define LED1 1<<0
#define LED2 1<<1
#define LED3 1<<2
#define LED4 1<<3
#define ALL_LEDS LED1|LED2|LED3|LED4
#define SW1 1<<17
#define SW2 1<<16
#define SW3 1<<15
#define SW4 1<<14
int main()
{
IODIR0 = ALL_LEDS;
while(1)
{
IOCLR0 = ALL_LEDS;
if(((IOPIN0 >> SW1)&1)==0)
IOSET0 = LED1;
else if(((IOPIN0 >> SW2)&1)==0) 
IOSET0 = LED2;
else if(((IOPIN0 >> SW3)&1)==0)
IOSET0 = LED3;
else if(((IOPIN0 >> SW4)&1)==0)
IOSET0 = LED4;
}
}
