//External interrupt0 non-vectored irq
//falling edge
#include<LPC21XX.H>
#define LED0 1<<17

void non_vectored_isr(void) __irq
{
EXTINT = OxOO;
IOSET0 = LED0;
IOCLRO = LED0;
VICVectAddr =0;
}

int main()
{
unsigned int cnt=0;
PINSEL1 = 0x01;
IODIRO = LED0;
VICIntSelect = 0;
VICDefVectAddr = (int)non_vectored_isr;

EXTMODE = 0x01;
EXTPOLAR = 0x00;

VICIntEnable= 1<<14;
while(1)
{
cnt++;
}
}
